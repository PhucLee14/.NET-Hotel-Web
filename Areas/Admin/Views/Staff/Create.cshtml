@model HotelManagement.NhanVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title title ml-32">Add New Staff</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
