
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="h3 mb-2 text-gray-800" style="margin: 0 2rem">Family Room</h1>
<div class="row family-room-list">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="room-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Occupied room
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">P101</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-circle-minus fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Annual) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="room-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Available Room
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">P102</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-circle-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="room-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Room off
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">P103</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-circle-xmark fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="room-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Book in advance
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">P104</div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-circle-exclamation fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>