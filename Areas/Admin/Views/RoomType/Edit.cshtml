@model HotelManagement.LoaiPhong

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="card-title title ml-32">Edit Room Type</h2>


@using (Html.BeginForm("Edit", "RoomType", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaLoaiPhong)

    <div class="form-group">
        @Html.LabelFor(model => model.TenLoaiPhong, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenLoaiPhong, new { htmlAttributes = new { @class = "form-control" } })
            @*@Html.ValidationMessageFor(model => model.TenLoaiPhong, "", new { @class = "text-danger" })*@
            @Html.ValidationMessage("TenLoaiPhong", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GiaLoaiPhong, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaLoaiPhong, new { htmlAttributes = new { @class = "form-control", Value = Model.GiaLoaiPhong.ToString("0.##") } })
            @Html.ValidationMessageFor(model => model.GiaLoaiPhong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SoNguoiToiDa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoNguoiToiDa, new { htmlAttributes = new { @class = "form-control", min = "1", max = "8" } })
            @Html.ValidationMessageFor(model => model.SoNguoiToiDa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.HinhAnh, new { type = "file", @class = "form-control" })
            <img src="~/Assets/admin/img/@Model.HinhAnh" style="width: 100px; margin-top: 16px" />
            @Html.Hidden("oldimage", @Model.HinhAnh)
            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default create-btn" />
        </div>
    </div>
</div>
}

<p class="ml-32 mt-32 mb-24 back-btn">
    @Html.ActionLink("Back to List", "Index")
</p>
