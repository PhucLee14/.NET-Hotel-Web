@model IEnumerable<WebApplication5.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm khách hàng", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiKhach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CCCD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiKhach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CCCD)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaKhach }, new {@class = "acction-link"})       
            @Html.ActionLink("Details", "Details", new { id=item.MaKhach }, new { @class = "acction-link" })     
            @Html.ActionLink("Delete", "Delete", new { id=item.MaKhach }, new { @class = "acction-link" })
        </td>
    </tr>
}

</table>
