<section class="site-hero overlay" style="background-image: url(@Url.Content("~/Images/hero_4.jpg"))" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
            <div class="col-md-10 text-center" data-aos="fade-up">
                <h1 class="heading">@ViewBag.Title</h1>
                <p class="custom-caption text-uppercase text-white d-block  mb-3">@ViewBag.Description</p>
            </div>
        </div>
    </div>

    <a class="mouse smoothscroll" href="#next">
        <div class="mouse-icon">
            <span class="mouse-wheel"></span>
        </div>
    </a>
</section>
